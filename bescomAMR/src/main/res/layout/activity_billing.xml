<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="475dp"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblHeader"
            style="@style/SBLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Survey" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <AutoCompleteTextView
                android:id="@+id/autoBillingSearch"
                style="@style/SBAutoComplete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                android:ems="20"
                android:hint="Enter RRNO"
                android:inputType="textCapCharacters"
                android:maxLength="25"
                android:scrollY="100sp" >

                <requestFocus />
            </AutoCompleteTextView>

            <Button
                android:id="@+id/btnBillingMap"
                style="@style/SBButton"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:text="Map"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnNewEntry"
                style="@style/SBButton"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:text="New Survey With Photo Capture" />

           
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblBillingConnectionId"
                    style="@style/SBSmallLabel"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ConID" />

                <TextView
                    android:id="@+id/lblBillingRRNo"
                    style="@style/SBSmallLabel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/RRno" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtBillingConnectionId"
                    style="@style/SBLabel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtBillingRRNo"
                    style="@style/SBLabel"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblBillingStatus"
                style="@style/SBSmallLabel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/Status"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtBillingStatus"
                    style="@style/SBLabel"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtBillingMtd"
                    style="@style/SBLabel"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblBillingLoad"
                    style="@style/SBSmallLabel"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Load" />

                <TextView
                    android:id="@+id/lblBillingTariff"
                    style="@style/SBSmallLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tariff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtBillingLoad"
                    style="@style/SBLabel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtBillingTariff"
                    style="@style/SBLabel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblCustomerName"
                    style="@style/SBSmallLabel"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="CustomerName" />

                <TextView
                    android:id="@+id/lblMeterSlNo"
                    style="@style/SBSmallLabel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Meter SLNo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtCustomerName"
                    style="@style/SBLabel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txtMeterSlNo"
                    style="@style/SBLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:maxLines="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblAddress"
                style="@style/SBSmallLabel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Address" />

            <TextView
                android:id="@+id/txtAddress"
                style="@style/SBLabel"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Address"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/Button01"
                    style="@style/SBButton"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:text="Edit Survey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnBillingOk"
                    style="@style/SBButton"
                    android:layout_width="265dp"
                    android:layout_height="45dp"
                    android:text="Survey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btnBillingPrev"
                    style="@style/SBButton"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="@string/prev" />

                <Button
                    android:id="@+id/btnBillingNext"
                    style="@style/SBButton"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:text="@string/next" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>