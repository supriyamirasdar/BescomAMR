<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin" >

    <TextView
        android:id="@+id/lblTariffwiseReport"
        style="@style/SBLargeLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/TCWise_Survey_Report" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblTotal"
            style="@style/SBLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/SurDone" />

        <TextView
            android:id="@+id/texttotal"
            style="@style/SBLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblTransformername"
                    style="@style/SBSmallLabel"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/TransformerName"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblSurveyDone"
                    style="@style/SBSmallLabel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SurveyCount"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <ListView
                android:id="@+id/lsttariff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="250dp" >
            </ListView>

            <TextView
                android:id="@+id/lbldashh"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/dash" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblTarif"
                    style="@style/SBSmallLabel"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/Total"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total1"
                    style="@style/SBSmallLabel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>